# Solana Configuration
# Vite variables (preferred)
# Disable all RPC interactions globally (set to 'true' to re-enable later)
VITE_ENABLE_RPC=false
VITE_SOLANA_NETWORK=mainnet-beta
VITE_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
VITE_HELIUS_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
# Legacy React variables (still read in some places)
REACT_APP_SOLANA_NETWORK=mainnet-beta
REACT_APP_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Jupiter API Configuration
# Vite variables (preferred)
VITE_JUPITER_API_URL=https://api.jup.ag/ultra
VITE_JUPITER_API_KEY=your_jupiter_api_key_here
# Legacy React variables
REACT_APP_JUPITER_API_URL=https://api.jup.ag/ultra
REACT_APP_JUPITER_API_KEY=your_jupiter_api_key_here

# Treasury Wallet
# Vite variable (preferred)
VITE_TREASURY_WALLET=your_treasury_wallet_address_here
# Optional: Explicit treasury USDC ATA if known (otherwise it will be derived)
VITE_TREASURY_USDC_ACCOUNT=
# Legacy React variable
REACT_APP_TREASURY_WALLET=your_treasury_wallet_address_here

# Environment
# Vite variable (preferred)
VITE_APP_ENV=development
# Legacy React variable
REACT_APP_ENV=development

# Backend Configuration (for production build)
MONGODB_URI=mongodb://localhost:27017/spendthrone
JWT_SECRET=your-secret-key

# Additional Solana Configuration
REACT_APP_SOLANA_CONNECTION_TIMEOUT=30000
REACT_APP_SOLANA_CONFIRMATION_TIMEOUT=60000
REACT_APP_SOLANA_PREFLIGHT_COMMITMENT=confirmed

# Jupiter Swap Configuration
# Vite variables (optional)
VITE_JUPITER_SLIPPAGE=3
VITE_JUPITER_FEE_ACCOUNT=your_fee_account_address_here
# Legacy React variables
REACT_APP_JUPITER_SLIPPAGE=3
REACT_APP_JUPITER_FEE_ACCOUNT=your_fee_account_address_here
# UI/Debug settings
# Enable verbose debug logging in the frontend (console.log/warn gated by this flag)
VITE_DEBUG=false

# Optional: Override static token icon fallback (default: https://static.jup.ag/token-icon.png)
# Provide a full URL to a hosted image to use as a generic token icon
VITE_STATIC_TOKEN_ICON=

# Supabase Configuration
# Vite variables (preferred)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
# Legacy React variables
REACT_APP_SUPABASE_URL=your_supabase_project_url
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key
